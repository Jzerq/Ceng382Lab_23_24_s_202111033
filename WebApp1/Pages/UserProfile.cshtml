@page
@model UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }
        .container {
            background-color: rgba(59, 7, 7, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }
        .form-group label {
            color: #fff;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .alert {
            margin-top: 20px;
        }
        table {
            background-color: #343a40;
            border-radius: 10px;
            overflow: hidden;
        }
        table thead {
            background-color: #007bff;
        }
        table th, table td {
            color: #fff;
        }
        .btn {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">User Profile</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="mb-4">
            <h3>Profile Information</h3>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="UserDetails.City">City</label>
                    <input asp-for="UserDetails.City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.Description">Description</label>
                    <textarea asp-for="UserDetails.Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="UserDetails.Photo">Profile Photo</label>
                    <input asp-for="PhotoUpload" type="file" class="form-control-file" />
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>

        <div class="mb-4">
            <h3>Booking History</h3>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Reservation Name</th>
                        <th>Room Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.BookingHistory)
                    {
                        <tr>
                            <td>@reservation.Name</td>
                            <td>@reservation.Room.RoomName</td>
                            <td>@reservation.StartTime</td>
                            <td>@reservation.EndTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
