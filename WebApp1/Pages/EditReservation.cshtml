@page "{id:int}"
@model EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }
        .container {
            background-color: rgba(59, 7, 7, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }
        .form-group label {
            color: #fff;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .alert {
            margin-top: 20px;
        }
        table {
            background-color: #343a40;
            border-radius: 10px;
            overflow: hidden;
        }
        table thead {
            background-color: #007bff;
        }
        table th, table td {
            color: #fff;
        }
        table img {
            border-radius: 5px;
            max-width: 150px;
            max-height: 100px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Edit Reservation</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="Reservation.Name">Reservation Name</label>
                <input asp-for="Reservation.Name" class="form-control" />
                <span asp-validation-for="Reservation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.RoomId">Select Room</label>
                <select asp-for="Reservation.RoomId" asp-items="Model.Rooms" class="form-control"></select>
                <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.StartTime">Start Time</label>
                <input asp-for="Reservation.StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.EndTime">End Time</label>
                <input asp-for="Reservation.EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
