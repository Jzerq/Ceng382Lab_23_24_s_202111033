@page
@model ReservationTableModel
@{
    ViewData["Title"] = "Reservation Table";
}

<h1>Reservation Table</h1>

<div class="filter-section">
    <form method="get">
        <div class="mb-3">
            <label for="RoomName" class="form-label">Room Name</label>
            <input type="text" id="RoomName" name="RoomName" class="form-control" value="@Model.Filter.RoomName"/>
        </div>
        <div class="mb-3">
            <label for="StartDate" class="form-label">Start Date</label>
            <input type="date" id="StartDate" name="StartDate" class="form-control" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")"/>
        </div>
        <div class="mb-3">
            <label for="EndDate" class="form-label">End Date</label>
            <input type="date" id="EndDate" name="EndDate" class="form-control" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")"/>
        </div>
        <div class="mb-3">
            <label for="Capacity" class="form-label">Capacity</label>
            <input type="number" id="Capacity" name="Capacity" class="form-control" value="@Model.Filter.Capacity"/>
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Room</th>
            <th>Date and Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@reservation.Room.RoomName</td>
                <td>@reservation.DateTime</td>
                <td>
                    <a href="/EditReservation?id=@reservation.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@reservation.Id" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
