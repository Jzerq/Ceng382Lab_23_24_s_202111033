@page
@model RoomListModel
@{
    ViewData["Title"] = "Room List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }
        .container {
            background-color: rgba(73, 5, 5, 0.8);
            padding: 20px;
            border-radius: 10px;
        }
        table {
            background-color: #343a40;
            border-radius: 10px;
            overflow: hidden;
        }
        table thead {
            background-color: #007bff;
        }
        table th, table td {
            color: #fff;
        }
        table img {
            border-radius: 5px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Room List</h1>

        @if (Model.Rooms != null && Model.Rooms.Any())
        {
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Name</th>
                        <th>Description</th>
                        <th>Photo</th>
                        <th>Capacity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td>@room.RoomId</td>
                            <td>@room.RoomName</td>
                            <td>@room.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(room.PhotoUrl))
                                {
                                    <img src="@room.PhotoUrl" alt="Room Photo" style="max-width: 150px; max-height: 100px;" />
                                }
                                else
                                {
                                    <span>No photo available</span>
                                }
                            </td>
                            <td>@room.Capacity</td>
                            <td>
                                <form method="post" asp-page-handler="Delete" asp-route-deleteId="@room.RoomId" style="display:inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this room?')">Delete</button>
                                </form>
                                <a href="EditRoom?id=@room.RoomId" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No rooms available.</p>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
