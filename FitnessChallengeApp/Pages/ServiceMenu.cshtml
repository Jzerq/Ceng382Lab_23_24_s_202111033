@page
@model FitnessChallengeApp.Pages.ServiceMenuModel
@{
    ViewData["Title"] = "Service Menu";
    ViewData["BodyClass"] = "service-menu";
}

<h1>Service Menu</h1>

<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Challenges</h5>
            <p class="card-text">Browse, join and create various fitness challenges to stay motivated.</p>
            <a href="/Challenges/Index" class="btn btn-primary">View Challenges</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Leaderboard</h5>
            <p class="card-text">Check the leaderboard to see how you rank against other users.</p>
            <a href="/Leaderboard" class="btn btn-primary">View Leaderboard</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">General Leaderboard</h5>
            <p class="card-text">View the overall leaderboard for all challenges combined.</p>
            <a href="/GeneralLeaderboard" class="btn btn-primary">View General Leaderboard</a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Favorites</h5>
            <p class="card-text">Manage your favorite challenges.</p>
            <a href="/Favorites" class="btn btn-primary">View Favorites</a>
        </div>
    </div>
</div>

<style>
    .service-menu {
        background-image: url('/images/service-menu-background.png');
        background-size: cover;
        background-attachment: fixed;
    }

    .card-deck .card {
        margin-bottom: 20px;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid #ccc;
    }

    .card-title {
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
