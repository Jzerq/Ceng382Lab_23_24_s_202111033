@page
@model FitnessChallengeApp.Pages.Challenges.IndexModel
@{
    ViewData["Title"] = "Challenges";
    ViewData["BodyClass"] = "challenges";
}

<h1>Challenges</h1>

<form method="get" class="form-inline mb-4">
    <input type="text" name="keyword" value="@Model.Keyword" class="form-control mr-2" placeholder="Keyword" />
    <select name="difficulty" class="form-control mr-2">
        <option value="">-- Select Difficulty --</option>
        @foreach (var difficulty in new[] { "Easy", "Medium", "Hard" })
        {
            <option value="@difficulty" selected="@(Model.Difficulty == difficulty ? "selected" : null)">@difficulty</option>
        }
    </select>
    <select name="category" class="form-control mr-2">
        <option value="">-- Select Category --</option>
        @foreach (var category in new[] { "Steps", "WeightLoss", "Cardio", "Strength", "Running", "Muscle" })
        {
            <option value="@category" selected="@(Model.Category == category ? "selected" : null)">@category</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div>
    <a href="/Challenges/Create" class="btn btn-success mb-3">Create New Challenge</a>
    @foreach (var challenge in Model.Challenges)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@challenge.Title</h5>
                <p class="card-text">@challenge.Description</p>
                <p class="card-text"><small class="text-muted">@challenge.Category</small></p>
                @if (Model.UserChallenges.Any(uc => uc.ChallengeId == challenge.Id && uc.UserId == User.FindFirst(ClaimTypes.NameIdentifier)?.Value))
                {
                    <a href="/Challenges/Leave/@challenge.Id" class="btn btn-warning">Leave</a>
                }
                else
                {
                    <a href="/Challenges/Join/@challenge.Id" class="btn btn-success">Join</a>
                }
                @if (Model.Favorites.Any(f => f.ChallengeId == challenge.Id && f.UserId == User.FindFirst(ClaimTypes.NameIdentifier)?.Value))
                {
                    <form method="post" asp-page-handler="RemoveFavorite" asp-route-id="@challenge.Id" class="d-inline">
                        <button type="submit" class="btn btn-secondary btn-sm">Remove from Favorites</button>
                    </form>
                }
                else
                {
                    <form method="post" asp-page-handler="AddFavorite" asp-route-id="@challenge.Id" class="d-inline">
                        <button type="submit" class="btn btn-info btn-sm">Add to Favorites</button>
                    </form>
                }
                <a href="/Challenges/Details/@challenge.Id" class="btn btn-info">Details</a>
                
                @if (Model.ChallengeCreators.ContainsKey(challenge.Id) && Model.ChallengeCreators[challenge.Id] == User.FindFirst(ClaimTypes.NameIdentifier)?.Value)
                {
                    <a href="/Challenges/Edit/@challenge.Id" class="btn btn-primary">Edit</a>
                    <a href="/Challenges/Delete/@challenge.Id" class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    }
</div>

<style>
    .challenges {
        background-image: url('/images/challenges-background.png');
        background-size: cover;
        background-attachment: fixed;
    }
</style>