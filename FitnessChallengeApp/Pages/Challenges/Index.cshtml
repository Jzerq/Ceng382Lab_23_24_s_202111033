@page
@model FitnessChallengeApp.Pages.Challenges.IndexModel
@{
    ViewData["Title"] = "Challenges";
    ViewData["BodyClass"] = "challenges";
}

<h1>Challenges</h1>

<form method="get" class="form-inline mb-4">
    <input type="text" name="keyword" value="@Model.Keyword" class="form-control mr-2" placeholder="Keyword" />
    <select name="difficulty" class="form-control mr-2">
        <option value="">-- Select Difficulty --</option>
        @{
            var difficulties = new[] { "Easy", "Medium", "Hard" };
            foreach (var difficulty in difficulties)
            {
                var selected = Model.Difficulty == difficulty ? "selected" : null;
                <option value="@difficulty" selected="@selected">@difficulty</option>
            }
        }
    </select>
    <select name="category" class="form-control mr-2">
        <option value="">-- Select Category --</option>
        @{
            var categories = new[] { "Steps", "WeightLoss", "Cardio", "Strength", "Running", "Muscle" };
            foreach (var category in categories)
            {
                var selected = Model.Category == category ? "selected" : null;
                <option value="@category" selected="@selected">@category</option>
            }
        }
    </select>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div>
    @foreach (var challenge in Model.Challenges)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@challenge.Title</h5>
                <p class="card-text">@challenge.Description</p>
                <p class="card-text"><small class="text-muted">@challenge.Category</small></p>
                @if (challenge.CreatedBy == User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                {
                    <a href="/Challenges/Edit/@challenge.Id" class="btn btn-primary">Edit</a>
                    <a href="/Challenges/Delete/@challenge.Id" class="btn btn-danger">Delete</a>
                }
                else
                {
                    <a href="/Challenges/Join/@challenge.Id" class="btn btn-success">Join</a>
                }
            </div>
        </div>
    }
</div>

<style>
    .challenges {
        background-image: url('/images/challenges-background.jpg');
        background-size: cover;
        background-attachment: fixed;
    }
</style>
