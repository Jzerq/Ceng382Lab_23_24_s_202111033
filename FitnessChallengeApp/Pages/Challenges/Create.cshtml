@page
@model FitnessChallengeApp.Pages.Challenges.CreateModel
@{
    ViewData["Title"] = "Create Challenge";
}

<h1 class=".text-black">Create Challenge</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Challenge.Title" class="text-white"></label>
        <input asp-for="Challenge.Title" class="form-control text-white bg-dark" />
        <span asp-validation-for="Challenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Description" class="text-white"></label>
        <textarea asp-for="Challenge.Description" class="form-control text-white bg-dark"></textarea>
        <span asp-validation-for="Challenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Category" class="text-white"></label>
        <select asp-for="Challenge.Category" class="form-control bg-dark text-white">
            <option value="">-- Select Category --</option>
            @{
                var categories = new[] { "Steps", "WeightLoss", "Cardio", "Strength", "Running", "Muscle" };
                foreach (var category in categories)
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
        <span asp-validation-for="Challenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.DifficultyLevel" class="text-white"></label>
        <select asp-for="Challenge.DifficultyLevel" class="form-control bg-dark text-white">
            <option value="">-- Select Difficulty --</option>
            @{
                var difficulties = new[] { "Easy", "Medium", "Hard" };
                foreach (var difficulty in difficulties)
                {
                    <option value="@difficulty">@difficulty</option>
                }
            }
        </select>
        <span asp-validation-for="Challenge.DifficultyLevel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body.challenges {
        background-image: url('/images/challenges-background.png');
        background-size: cover;
        background-attachment: fixed;
    }
    .text-white {
        color: white !important;
    }
    .text-black{
        color: black !important;
    }
    .form-control.bg-dark {
        background-color: #333;
        color: white;
    }
    .form-control.bg-dark::placeholder {
        color: white;
    }
</style>
