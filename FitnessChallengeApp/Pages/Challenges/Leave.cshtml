@page "{id:int}"
@model FitnessChallengeApp.Pages.Challenges.LeaveModel
@{
    ViewData["Title"] = "Leave Challenge";
}

<h1>Leave Challenge</h1>

<p>Are you sure you want to leave the challenge: <strong>@Model.Challenge.Title</strong>?</p>

<form method="post">
    <button type="submit" class="btn btn-warning">Leave</button>
    <a asp-page="/Challenges/Index" class="btn btn-secondary">Cancel</a>
</form>

<style>
    .challenges {
        background-image: url('/images/challenges-background.png');
        background-size: cover;
        background-attachment: fixed;
    }
</style>
