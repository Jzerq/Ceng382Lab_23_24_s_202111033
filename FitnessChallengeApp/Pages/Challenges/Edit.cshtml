@page "{id:int}"
@model FitnessChallengeApp.Pages.Challenges.EditModel
@{
    ViewData["Title"] = "Edit Challenge";
}

<h1>Edit Challenge</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Challenge.Title"></label>
        <input asp-for="Challenge.Title" class="form-control" />
        <span asp-validation-for="Challenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Description"></label>
        <textarea asp-for="Challenge.Description" class="form-control"></textarea>
        <span asp-validation-for="Challenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Category"></label>
        <input asp-for="Challenge.Category" class="form-control" />
        <span asp-validation-for="Challenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.DifficultyLevel"></label>
        <input asp-for="Challenge.DifficultyLevel" class="form-control" />
        <span asp-validation-for="Challenge.DifficultyLevel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
