@page "{id:int}"
@model FitnessChallengeApp.Pages.Challenges.EditModel
@{
    ViewData["Title"] = "Edit Challenge";
    ViewData["BodyClass"] = "challenges";
}

<h1>Edit Challenge</h1>

<form method="post">
    <input type="hidden" asp-for="Challenge.Id" />
    <div class="form-group">
        <label asp-for="Challenge.Title"></label>
        <input asp-for="Challenge.Title" class="form-control" />
        <span asp-validation-for="Challenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Description"></label>
        <textarea asp-for="Challenge.Description" class="form-control"></textarea>
        <span asp-validation-for="Challenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Category"></label>
        <select asp-for="Challenge.Category" class="form-control">
            <option value="Steps">Steps</option>
            <option value="WeightLoss">Weight Loss</option>
            <option value="Cardio">Cardio</option>
            <option value="Strength">Strength</option>
            <option value="Running">Running</option>
            <option value="Muscle">Muscle</option>
          
        </select>
        <span asp-validation-for="Challenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.DifficultyLevel"></label>
        <select asp-for="Challenge.DifficultyLevel" class="form-control">
            <option value="Easy">Easy</option>
            <option value="Medium">Medium</option>
            <option value="Hard">Hard</option>
        </select>
        <span asp-validation-for="Challenge.DifficultyLevel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-page="/Challenges/Index" class="btn btn-secondary">Cancel</a>

<style>
    .challenges {
        background-image: url('/images/challenges-background.png');
        background-size: cover;
        background-attachment: fixed;
    }
</style>
